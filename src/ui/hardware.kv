
<HardwareConfig>:
    title: "Hardware Setup"
    name: 'config'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            spacing: "3dp"
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: app.button_height
                padding: [3, 3, 3, 3]
                canvas:
                    Color:
                        rgba: [1, 1, 1, 0.2]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: app.label_height
                    spacing: '5dp'
                    Label:
                        halign: 'left'
                        size_hint_y: None
                        size_hint_x: None
                        width: self.texture_size[0]
                        height: app.label_height
                        text: "Camera Focal Length"
                    TextInput:
                        on_text: root.camera_focal_length_mm = float(self.text)
                        input_filter: 'float'
                        size_hint_x: None
                        width: "70dp"
                        size_hint_y: None
                        height: app.label_height
                        multiline: False
                        text: str(root.camera_focal_length_mm)
                    Label:
                        size_hint_x: None
                        width: "55dp"
                        size_hint_y: None
                        height: app.label_height
                        text: "mm"

            BoxLayout:
                size_hint_y: None
                height: app.button_height
                orientation: 'vertical'
                padding: [3, 3, 3, 3]
                canvas:
                    Color:
                        rgba: [1, 1, 1, 0.2]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: "5dp"
                    Label:
                        halign: 'left'
                        size_hint_y: None
                        size_hint_x: None
                        width: self.texture_size[0]
                        height: app.label_height
                        text: "Sensor Size X, Y"
                    TextInput:
                        on_text: root.sensor_size_x_mm = float(self.text)
                        input_filter: 'float'
                        size_hint_x: None
                        width: "70dp"
                        size_hint_y: None
                        height: app.label_height
                        multiline: False
                        text: str(root.sensor_size_x_mm)
                    Label:
                        size_hint_x: None
                        width: "55dp"
                        size_hint_y: None
                        height: app.label_height
                        text: "X"
                    TextInput:
                        on_text: root.sensor_size_y_mm = float(self.text)
                        input_filter: 'float'
                        size_hint_x: None
                        width: "70dp"
                        size_hint_y: None
                        height: app.label_height
                        multiline: False
                        text: str(root.sensor_size_y_mm)
                    Label:
                        size_hint_x: None
                        width: "55dp"
                        size_hint_y: None
                        height: app.label_height
                        text: "mm"

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: app.button_height
                padding: [3, 3, 3, 3]
                canvas:
                    Color:
                        rgba: [1, 1, 1, 0.2]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: app.label_height
                    spacing: "5dp"
                    Label:
                        halign: 'left'
                        size_hint_y: None
                        size_hint_x: None
                        width: self.texture_size[0]
                        height: app.label_height
                        text: "Focal Point to Center"
                    TextInput:
                        on_text: root.focal_point_to_center = float(self.text)
                        input_filter: 'float'
                        size_hint_x: None
                        width: "70dp"
                        size_hint_y: None
                        height: app.label_height
                        multiline: False
                        text: str(root.focal_point_to_center)
                    Label:
                        size_hint_x: None
                        width: "55dp"
                        size_hint_y: None
                        height: app.label_height
                        text: "mm"

            GridLayout:
                cols: 4
                spacing: 5
                Label:
                    text: 'Angle'
                    size_hint: (None, None)
                    height: app.label_height
                    width: '70dp'
                Label:
                    size_hint: (None, None)
                    height: app.label_height
                    width: '25dp'
                Label:
                    text: 'Distance'
                    size_hint: (None, None)
                    height: app.label_height
                    width: '70dp'
                Label:
                    size_hint: (None, None)
                    height: app.label_height
                    width: '25dp'

                TextInput:
                    size_hint: (None, None)
                    width: '70dp'
                    height: app.label_height
                    multiline: False
                    text: str(root.laser_intersection_degree_1)
                    on_text: root.laser_intersection_degree_1 = float(self.text)
                    input_filter: 'float'
                Label:
                    text: 'Deg'
                    size_hint: (None, None)
                    height: app.label_height
                    width: '25dp'
                TextInput:
                    size_hint: (None, None)
                    height: app.label_height
                    width: '70dp'
                    multiline: False
                    text: str(root.laser_intersection_distance_1)
                    on_text: root.laser_intersection_distance_1 = float(self.text)
                Label:
                    text: 'mm'
                    size_hint: (None, None)
                    width: '20dp'
                    height: app.label_height


                TextInput:
                    size_hint: (None, None)
                    width: '70dp'
                    height: app.label_height
                    multiline: False
                    text: str(root.laser_intersection_degree_2)
                    on_text: root.laser_intersection_degree_2 = float(self.text)
                    input_filter: 'float'
                Label:
                    text: 'Deg'
                    size_hint: (None, None)
                    height: app.label_height
                    width: '25dp'
                TextInput:
                    size_hint: (None, None)
                    height: app.label_height
                    width: '70dp'
                    multiline: False
                    text: str(root.laser_intersection_distance_2)
                    on_text: root.laser_intersection_distance_2 = float(self.text)
                Label:
                    text: 'mm'
                    size_hint: (None, None)
                    width: '20dp'
                    height: app.label_height


                TextInput:
                    size_hint: (None, None)
                    width: '70dp'
                    height: app.label_height
                    multiline: False
                    text: str(root.laser_intersection_degree_3)
                    on_text: root.laser_intersection_degree_3 = float(self.text)
                    input_filter: 'float'
                Label:
                    text: 'Deg'
                    size_hint: (None, None)
                    height: app.label_height
                    width: '25dp'
                TextInput:
                    size_hint: (None, None)
                    height: app.label_height
                    width: '70dp'
                    multiline: False
                    text: str(root.laser_intersection_distance_3)
                    on_text: root.laser_intersection_distance_3 = float(self.text)
                Label:
                    text: 'mm'
                    size_hint: (None, None)
                    width: '20dp'
                    height: app.label_height


                TextInput:
                    size_hint: (None, None)
                    width: '70dp'
                    height: app.label_height
                    multiline: False
                    text: str(root.laser_intersection_degree_4)
                    on_text: root.laser_intersection_degree_4 = float(self.text)
                    input_filter: 'float'
                Label:
                    text: 'Deg'
                    size_hint: (None, None)
                    height: app.label_height
                    width: '25dp'
                TextInput:
                    size_hint: (None, None)
                    height: app.label_height
                    width: '70dp'
                    multiline: False
                    text: str(root.laser_intersection_distance_4)
                    on_text: root.laser_intersection_distance_4 = float(self.text)
                Label:
                    text: 'mm'
                    size_hint: (None, None)
                    width: '20dp'
                    height: app.label_height


                TextInput:
                    size_hint: (None, None)
                    width: '70dp'
                    height: app.label_height
                    multiline: False
                    text: str(root.laser_intersection_degree_5)
                    on_text: root.laser_intersection_degree_5 = float(self.text)
                    input_filter: 'float'
                Label:
                    text: 'Deg'
                    size_hint: (None, None)
                    height: app.label_height
                    width: '25dp'
                TextInput:
                    size_hint: (None, None)
                    height: app.label_height
                    width: '70dp'
                    multiline: False
                    text: str(root.laser_intersection_distance_5)
                    on_text: root.laser_intersection_distance_5 = float(self.text)
                Label:
                    text: 'mm'
                    size_hint: (None, None)
                    width: '20dp'
                    height: app.label_height

            Label:
            Button:
                size_hint_y: None
                height: app.button_height
                text: "Done"
                on_release: root.parent.current='loading'

        Label:
            text: "Helpful Image Here"
            canvas.before:
                Color:
                    rgba: [1,0,0,1]
                Rectangle:
                    pos: self.pos
                    size: self.size



