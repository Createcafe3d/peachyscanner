<NumpyImage>:
    canvas.before:
        Rectangle:
            pos: self.tex_pos
            texture: self.texture
            size: self.tex_size

<ImageCapture>:
    name: 'image_capture_ui'
    image_box: image_box
    GridLayout:
        cols: 1
        Button:
            size_hint_y: None
            height: app.button_height
            id: image_capture_button
            text: "Start Image Capture"
            on_release: root.start_image_capture()
        NumpyImage:
            id:image_box


<PointsCapture>:
    name: 'points_capture_ui'
    render: render
    go_button: go_button
    GridLayout:
        cols: 1
        Button:
            id: go_button
            size_hint_y: None
            height: app.button_height
            text: "Start Points Capture"
            on_release: root.start_points_capture()
#        ProgressBar:
#            id: progress
#            size_hint_y: None
#            height: app.button_height
#            max: 1.0
#            value: 0.0
        ObjectRenderer:
            id:render
            mesh_mode: False
        ToggleButton:
            size_hint_y: None
            height: app.button_height
            text: "Mesh / Points"
            on_release: render.mesh_mode = True if self.state == 'down' else False
