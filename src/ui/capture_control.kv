<NumpyImage>:
    Label:
        canvas:
            Rectangle:
                pos: root.tex_pos
                texture: root.texture
                size: root.tex_size

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            path: root.path

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
            text: "*.ply"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<GoButton>:
    on_release: self.go_method(self.rad_value)

<PointsCapture>:
    image_box: image_box
    name: 'points_capture_ui'
    render: render
    go_buttons: go_buttons
    save_button: save_button
    clear_button: clear_button
    progress: progress
    GridLayout:
        cols: 1
        Label: 
            size_hint_y: None
            height: app.button_height
            text: "Capture"
        BoxLayout:
            id: go_buttons
            size_hint_y: None
            height: app.button_height
        ProgressBar:
            id: progress
            size_hint_y: None
            height: app.button_height
            max: 100
            value: 0
        ObjectRenderer:
            id:render
            mesh_mode: False
        NumpyImage:
            id:image_box
            size_hint_y: 0.5
        BoxLayout:
            size_hint_y: None
            height: app.button_height
            Button:
                id: save_button
                text: "Save"
                disabled: True
                on_release: root.show_save()
            Button:
                id: clear_button
                text: "Clear"
                disabled: True
                on_release: root.clear()


<ObjectRenderer>:
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
            texture: self.texture