<NumpyImage>:
    Label:
        canvas:
            Rectangle:
                pos: root.tex_pos
                texture: root.texture
                size: root.tex_size

<ImageCapture>:
    name: 'image_capture_ui'
    image_box: image_box
    GridLayout:
        cols: 1
        Button:
            size_hint_y: None
            height: app.button_height
            id: capture_button
            text: "Start Image Capture"
            on_release: root.start_image_capture()
        NumpyImage:
            id:image_box


<PointsCapture>:
    name: 'points_capture_ui'
    render: render
    go_button: go_button
    progress: progress
    GridLayout:
        cols: 1
        Button:
            id: go_button
            size_hint_y: None
            height: app.button_height
            text: "Start Points Capture"
            on_release: root.start_points_capture()
        ProgressBar:
            id: progress
            size_hint_y: None
            height: app.button_height
            max: 100
            value: 0
        ObjectRenderer:
            id:render
            mesh_mode: False
        Label:
            canvas:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    texture: root.model_texture
        ToggleButton:
            size_hint_y: None
            height: app.button_height
            text: "Mesh / Points"
            on_release: render.mesh_mode = True if self.state == 'down' else False

<ObjectRenderer>:
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
            texture: self.texture