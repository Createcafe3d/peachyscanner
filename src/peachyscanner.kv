<MyScreenManager>:


<ScannerGUI>:
    screen_manager: screen_manager
    video: video
    GridLayout:
        size_hint_x: None
        width: '350dp'
        cols: 1
        BoxLayout:
            size_hint_y: None
            height: app.button_height
            Button:
                size_hint_y: None
                height: app.button_height
                text: "CAM"
                on_release: root.manager.current = 'camera_control_ui'
            Button:
                size_hint_y: None
                height: app.button_height
                text: "POS"
                on_release: root.manager.current = 'posisition_control_ui'
            Button:
                size_hint_y: None
                height: app.button_height
                text: "COL"
                on_release: root.manager.current = 'color_control_ui'
            Button:
                size_hint_y: None
                height: app.button_height
                text: "GET"
                on_release: root.manager.current = 'capture_control_ui'
        BoxLayout:
            id: screen_manager
        BoxLayout:
            size_hint_y: None
            height: app.button_height
            ToggleButton:
                size_hint_y: None
                height: app.button_height
                text: "E"
                state: 'down'
                on_release: video.show_encoder = True if self.state == 'down' else False
            ToggleButton:
                size_hint_y: None
                height: app.button_height
                text: "H"
                state: 'down'
                on_release: video.show_encoder_history = True if self.state == 'down' else False
            ToggleButton:
                size_hint_y: None
                height: app.button_height
                text: "R"
                state: 'down'
                on_release: video.show_roi = True if self.state == 'down' else False
            ToggleButton:
                size_hint_y: None
                height: app.button_height
                text: "M"
                state: 'down'
                on_release: video.show_laser_detector = True if self.state == 'down' else False
            ToggleButton:
                size_hint_y: None
                height: app.button_height
                text: "C"
                state: 'down'
                on_release: video.show_center = True if self.state == 'down' else False
#        Button:
#            size_hint_y: None
#            height: app.button_height
#            text: "Quit"
#            on_release: app.shutdown()
    ImageDisplay:
        id: video
        scanner: app.scanner

        


